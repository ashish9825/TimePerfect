<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndroid="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@color/Charcoal"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Class Details"
                ndroid:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:shadowColor="@android:color/black"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computer Science Engineering"
                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/CSE"
                android:layout_below="@+id/card_title"
                android:textColor="@color/White"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5th 'A'"
                android:textSize="30sp"
                android:gravity="center"
                android:id="@+id/sem"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/CSE"
                android:layout_marginTop="10dp"
                android:textColor="@color/White"/>

            <RelativeLayout
                android:id="@+id/cr_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sem">
                <TextView
                    android:id="@+id/crs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Class Representatives"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="@color/White"/>
                <View
                    android:id="@+id/crs_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/crs"
                    android:background="@color/White"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:alpha="0.5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Naveen Kumar Verma &amp; Avni Sanghvi"
                    android:layout_below="@+id/crs"
                    android:textColor="@color/White"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mentor_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cr_details">
                <TextView
                    android:id="@+id/mentors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="Mentors"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="@color/White"/>
                <View
                    android:id="@+id/mentor_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/mentors"
                    android:background="@color/White"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:alpha="0.5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prof. Kapil Nagwanshi"
                    android:layout_below="@+id/mentors"
                    android:textColor="@color/White"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </RelativeLayout>

</android.support.v7.widget.CardView>