<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DayActivitty"
    tools:showIn="@layout/activity_day_activitty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/classProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/pbHeaderProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress_dialog">
        </ProgressBar>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/show_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Available"
        android:textSize="27sp"
        android:gravity="center"
        android:id="@+id/branch"
        android:layout_marginTop="15dp"
        android:textColor="@color/White"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N / A"
        android:textSize="24sp"
        android:gravity="center"
        android:id="@+id/sem"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/branch"
        android:layout_marginTop="10dp"
        android:textColor="@color/White"/>

    <RelativeLayout
        android:id="@+id/cr_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sem">
        <TextView
            android:id="@+id/crs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Class Representatives"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="@color/White"/>
        <View
            android:id="@+id/crs_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/crs"
            android:background="@color/White"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:alpha="0.5"/>
        <TextView
            android:id="@+id/cr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Available"
            android:layout_below="@+id/crs"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mentor_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cr_details">
        <TextView
            android:id="@+id/mentors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Mentors"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="@color/White"/>
        <View
            android:id="@+id/mentor_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mentors"
            android:background="@color/White"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:alpha="0.5"/>
        <TextView
            android:id="@+id/mentor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Available"
            android:layout_below="@+id/mentors"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

        <GridLayout
            android:id="@+id/grid_lectures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mentor_details"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:rowCount="3">

            <android.support.v7.widget.CardView
                android:id="@+id/monday"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/image1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Monday"
                        android:layout_margin="4dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/White"
                        android:textSize="17sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/tuesday"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/image2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Tuesday"
                        android:layout_margin="4dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/White"
                        android:textSize="17sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/wednesday"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/image10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Wednesday"
                        android:layout_margin="4dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/White"
                        android:textSize="17sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/thursday"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/image4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Thursday"
                        android:layout_margin="4dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/White"
                        android:textSize="17sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/friday"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/image5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Friday"
                        android:layout_margin="4dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/White"
                        android:textSize="17sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/saturday"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/image6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Saturday"
                        android:layout_margin="4dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/White"
                        android:textSize="17sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>

    </RelativeLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>