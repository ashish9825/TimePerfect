<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Views.DonateActivity"
    tools:showIn="@layout/activity_donate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cherry">
                <TextView
                    android:id="@+id/app_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paytm"
                    android:layout_margin="15dp"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_paytm"
                    android:layout_toRightOf="@id/app_Name"
                    android:layout_marginLeft="120dp"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:id="@+id/paytm_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paytm"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/White"
                    android:layout_below="@id/app_Name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONATE"
                    android:layout_below="@+id/paytm_description"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/White"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/day_tripper">
                <TextView
                    android:id="@+id/phonepe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PayPal"
                    android:layout_margin="15dp"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textSize="30sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_paypal_2"
                    android:layout_toRightOf="@id/phonepe"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="120dp"/>
                <TextView
                    android:id="@+id/phonepe_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paypal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/White"
                    android:layout_below="@id/phonepe"/>
                <TextView
                    android:id="@+id/paypal_donate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DONATE"
                    android:layout_below="@id/phonepe_description"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/White"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>